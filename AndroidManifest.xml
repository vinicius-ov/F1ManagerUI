<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.f1managerui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.digitreko.ui.f1managerui.F1Manager"
            android:label="@string/title_activity_main" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.BaseTabbedNavigationActivity"
            android:label="@string/title_activity_pilots" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.PilotsFragment"
            android:label="@string/title_activity_pilots" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.DisplayMessageActivity"
            android:label="@string/title_activity_display_message"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"    >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.TeamFragment"
            android:label="@string/title_activity_team" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.SelectGameModeActivity"
            android:label="@string/title_activity_select_game_mode" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.SelectTeamActivity"
            android:label="@string/title_activity_create_or_pick_team" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.CreateTeamActivity"
            android:label="@string/title_activity_create_team" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.CreateManagerActivity"
            android:label="@string/title_activity_create_manager"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"    >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.ConfirmStartGameActivity"
            android:label="@string/title_activity_confirm_start_game" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.NextRaceFragment"
            android:label="@string/title_activity_next_race" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.FinanceFragment"
            android:label="@string/title_activity_finance" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.PilotActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_pilot"
            android:theme="@style/FullscreenTheme" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.f1managerui.TabsPageAdapter"
            android:label="@string/title_activity_tabs_page_adapter"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"    >
        </activity>
        <activity
            android:name="com.digitreko.ui.f1managerui.PilotMoreInfoActivity"
            android:label="@string/title_activity_pilot_more_info" 
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden"   >
        </activity>
    </application>

</manifest>