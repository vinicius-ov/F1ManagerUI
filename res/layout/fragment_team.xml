<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".TeamFragment" >

    <TextView
        android:id="@+id/teamNameTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Team Name Goes Here"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/teamBalanceTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/constructorPointsTeam"
        android:text="Current Balance: 8.000.000"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/projectedBalanceTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/teamBalanceTeam"
        android:text="Projected balance (end of season): 2.000.000"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/constructorPointsTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="70dp"
        android:layout_toRightOf="@id/constructorPointsTeam"
        android:text="Constructor Points: 220"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textEngineTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/teamNameTeam"
        android:text="Engine: Ferrari"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/standingTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/teamBalanceTeam"
        android:layout_toRightOf="@+id/constructorPointsTeam"
        android:text="(3rd)"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/checkNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="Check News" />

    <Button
        android:id="@+id/checkMail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Check Mail (0)" />

    <Button
        android:id="@+id/trainReD"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trainPlanners"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trainEngineers"
        android:minHeight="24dp"
        android:onClick="upgradeTeamRandD"
        android:text="Train R&amp;D" />

    <Button
        android:id="@+id/trainPlanners"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/trainEngineers"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/trainReD"
        android:minHeight="24dp"
        android:onClick="upgradeTeamPlanners"
        android:text="Train Planners" />

    <TextView
        android:id="@+id/randdLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/trainReD"
        android:layout_alignBottom="@+id/trainReD"
        android:layout_alignParentLeft="true"
        android:text="R&amp;D Level 12"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/engineerLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/trainEngineers"
        android:layout_alignBottom="@+id/trainEngineers"
        android:layout_alignParentLeft="true"
        android:text="Engineers Level 10"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/plannersLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/trainPlanners"
        android:layout_alignBottom="@+id/trainPlanners"
        android:layout_alignParentLeft="true"
        android:text="Planners Level 99"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/trainEngineers"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/projectedBalanceTeam"
        android:layout_marginTop="36dp"
        android:minHeight="24dp"
        android:onClick="upgradeTeamEngineers"
        android:text="Train Engineers" />

    <TextView
        android:id="@+id/textFanCountTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/trainPlanners"
        android:layout_marginTop="23dp"
        android:text="Fan Count: 412320"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textReputacaoTeam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textFanCountTeam"
        android:text="Reputation: 6"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>