<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:ignore="HardcodedText" >

    <ImageView
        android:id="@+id/raceCarUpgrade"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/upgradeSuspension"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/suspensionLevel"
        android:minHeight="24dp"
        android:onClick="popAlertUpgradeSuspension"
        android:text="+" />

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/TextView06"
        android:layout_alignBottom="@+id/TextView06"
        android:layout_toLeftOf="@+id/engineLevel"
        android:text="Engine  "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/aerodynamicsLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upgradeAerodynamics"
        android:layout_alignParentRight="true"
        android:text="Lvl 5"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aerodynamicsLevel"
        android:layout_alignParentRight="true"
        android:text="Aerodynamics"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/aerodynamicsCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/repairTires"
        android:layout_alignParentRight="true"
        android:text="XXX"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/suspensionLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView06"
        android:text="Lvl 4"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/upgradeSuspension"
        android:text="Condition"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/suspensionCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/TextView07"
        android:text="XXX"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/TextView06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/repairBrakes"
        android:layout_alignParentRight="true"
        android:text="Suspension "
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/repairSuspension"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/suspensionCondition"
        android:minHeight="24dp"
        android:text="Repair" />

    <Button
        android:id="@+id/repairAerodynamics"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/repairTires"
        android:minHeight="24dp"
        android:text="Repair" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Tires"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/upgradeTiress"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tiresLevel"
        android:minHeight="24dp"
        android:onClick="popAlertUpgradeFrontWing"
        android:text="+" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/upgradeTiress"
        android:text="Condition"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/tiresCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tiresLevel"
        android:layout_below="@+id/textView5"
        android:text="XXX"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/repairTires"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tiresCondition"
        android:minHeight="24dp"
        android:text="Repair" />

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aerodynamicsCondition"
        android:layout_alignParentRight="true"
        android:text="Condition"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/upgradeAerodynamics"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView04"
        android:layout_alignParentRight="true"
        android:minHeight="24dp"
        android:onClick="popAlertUpgradeFrontWing"
        android:text="+" />

    <TextView
        android:id="@+id/playerCashToUpgrade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Balance: 4 600 000"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tiresCondition"
        android:layout_below="@+id/repairTires"
        android:layout_marginTop="17dp"
        android:text="Brakes"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/brakesLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/textView4"
        android:text="Lvl X"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/upgradeBrakes"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/brakesLevel"
        android:minHeight="24dp"
        android:onClick="popAlertUpgradeBrakes"
        android:text="+" />

    <TextView
        android:id="@+id/engeneerLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/upgradeBrakes"
        android:text="Condition"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/brakesCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/brakesLevel"
        android:layout_below="@+id/engeneerLevel"
        android:text="XXX"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/upgradeSuspension"
        android:text="Engine"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/engineLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView2"
        android:text="Lvl 2"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/upgradeEngine"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/engineLevel"
        android:minHeight="24dp"
        android:onClick="popAlertUpgradeEngine"
        android:text="+" />

    <TextView
        android:id="@+id/TextView09"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/repairBrakes"
        android:layout_below="@+id/upgradeEngine"
        android:text="Condition"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/engineCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView09"
        android:layout_below="@+id/TextView09"
        android:text="XXX"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/repairEngine"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/engineCondition"
        android:minHeight="24dp"
        android:text="Repair" />

    <Button
        android:id="@+id/repairBrakes"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/brakesCondition"
        android:minHeight="24dp"
        android:text="Repair" />

    <TextView
        android:id="@+id/tiresLevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/textView1"
        android:text="Lvl 466"
        android:textAppearance="?android:attr/textAppearanceSmall" />

</RelativeLayout>